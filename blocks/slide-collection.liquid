{% liquid
  assign collection = block.settings.collection
  assign image = block.settings.image | default: collection.featured_image
  assign url = block.settings.link | default: collection.url
  assign title = block.settings.title | default: collection.title
  assign description = block.settings.description | default: collection.description
  
  # Calculate index for slideshow compatibility
  assign index = 0
  for b in section.blocks
    if b.id == block.id
      assign index = forloop.index0
      break
    endif
  endfor
%}

{% capture slide_content %}
  <a href="{{ url }}" class="collection-slide__link">
    <div class="collection-slide__image-wrapper">
      {% if image != blank %}
        {{ image | image_url: width: 600 | image_tag: 
          loading: 'lazy', 
          class: 'collection-slide__image', 
          sizes: '(min-width: 1200px) 200px, (min-width: 768px) 25vw, 100vw' 
        }}
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag: 'collection-slide__image placeholder-svg' }}
      {% endif %}
    </div>
    <div class="collection-slide__content">
      {% if title != blank %}
        <h3 class="collection-slide__title">{{ title }}</h3>
      {% endif %}
      {% if description != blank %}
        <div class="collection-slide__description">{{ description }}</div>
      {% endif %}
    </div>
  </a>
{% endcapture %}

{% render 'slideshow-slide',
  index: index,
  class: 'collection-slide',
  children: slide_content,
  attributes: block.shopify_attributes,
  navigate_to_slide: false
%}

{% schema %}
{
  "name": "Collection Item",
  "tag": null,
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Values from the collection will be used if left blank."
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "info": "Values from the collection will be used if left blank."
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "info": "Values from the collection will be used if left blank."
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Values from the collection will be used if left blank."
    }
  ],
  "presets": [
    {
      "name": "Collection Item"
    }
  ]
}
{% endschema %}
