{% liquid
  assign collection = block.settings.collection
  assign image = block.settings.image | default: collection.featured_image
  assign url = block.settings.link | default: collection.url
  
  # Calculate index for slideshow compatibility
  assign index = 0
  for b in section.blocks
    if b.id == block.id
      assign index = forloop.index0
      break
    endif
  endfor
%}

{% capture slide_content %}
  <a href="{{ url }}" class="collection-slide__link">
    <div class="collection-slide__image-wrapper">
      {% if image != blank %}
        {{ image | image_url: width: 600 | image_tag: 
          loading: 'lazy', 
          class: 'collection-slide__image', 
          sizes: '(min-width: 1200px) 200px, (min-width: 768px) 25vw, 100vw' 
        }}
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag: 'collection-slide__image placeholder-svg' }}
      {% endif %}
    </div>
    <div class="collection-slide__content" style="{% render 'spacing-style', settings: block.settings %}">
      <div 
        class="group-block-content layout-panel-flex layout-panel-flex--{{ block.settings.content_direction }}"
        style="{% render 'layout-panel-style', settings: block.settings %}"
      >
        {% content_for 'blocks' %}
      </div>
    </div>
  </a>
{% endcapture %}

{% render 'slideshow-slide',
  index: index,
  class: 'collection-slide',
  children: slide_content,
  attributes: block.shopify_attributes,
  navigate_to_slide: false
%}

{% schema %}
{
  "name": "Collection Item",
  "tag": null,
  "blocks": [
    { "type": "_heading" },
    { "type": "text" },
    { "type": "button" }
  ],
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "Values from the collection will be used if left blank."
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link",
      "info": "Values from the collection will be used if left blank."
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "content_direction",
      "label": "Content Direction",
      "options": [
        { "value": "column", "label": "Vertical" },
        { "value": "row", "label": "Horizontal" }
      ],
      "default": "column"
    },
    {
      "type": "select",
      "id": "vertical_alignment_flex_direction_column",
      "label": "Vertical Alignment",
      "options": [
        { "value": "flex-start", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Bottom" },
        { "value": "space-between", "label": "Space Between" }
      ],
      "default": "center",
      "visible_if": "{{ block.settings.content_direction == 'column' }}"
    },
    {
      "type": "select",
      "id": "horizontal_alignment_flex_direction_column",
      "label": "Horizontal Alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "center",
      "visible_if": "{{ block.settings.content_direction == 'column' }}"
    },
     {
      "type": "range",
      "id": "gap",
      "label": "Gap",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 12
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "Padding Left",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "Padding Right",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Collection Item",
      "blocks": [
        {
          "type": "_heading",
          "settings": {
            "text": "<h2>Collection Title</h2>"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "<p>Collection description</p>"
          }
        }
      ]
    }
  ]
}
{% endschema %}
